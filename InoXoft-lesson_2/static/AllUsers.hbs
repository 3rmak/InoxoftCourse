<!DOCTYPE html>
<html lang="en">
<head>
    {{> header}}
</head>
<body>
    {{> navbar}}
    <div class="container">
        <h2>Hello</h2>
        {{#if authorized}}
            <table class="table">
                <thead>
                    <tr >
                    <th scope="col">Name</th>
                    <th scope="col">Surname</th>
                    <th scope="col">Email</th>
                    <th scope="col">Open</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each users}}
                        <tr>
                            <td>{{this.name}}</td>
                            <td>{{this.surname}}</td>
                            <td>{{this.email}}</td>
                            <td>
                                <a 
                                class="btn btn-info" 
                                href="/userPage/{{this.id}}"
                                type="submit"
                                >User Info
                                </a>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>  
        {{/if}}
    </div>

</body>
</html>